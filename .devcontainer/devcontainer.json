{
  "name": "Rust Server Development",
  "dockerComposeFile": "local.docker-compose.yml",
  "service": "server",
  "workspaceFolder": "/app",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash",
    "rust-analyzer.cargo.features": "all",
    "rust-analyzer.checkOnSave.command": "clippy",
    "editor.formatOnSave": true
  },
  "forwardPorts": [8080, 443],
  "postCreateCommand": "rustup default nightly && cargo check --manifest-path=/app/server/Cargo.toml",
  "remoteUser": "root",
  "remoteEnv": {
    "RUST_BACKTRACE": "1"
  },
  "runArgs": ["--cap-add=NET_ADMIN", "--privileged"]
}
